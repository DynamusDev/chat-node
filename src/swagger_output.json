{
  "swagger": "2.0",
  "info": {
    "version": "1.0.2",
    "title": "Dynamusdev API",
    "description": "Documentação para a API Dynamusdev."
  },
  "host": "localhost:3333",
  "basePath": "/",
  "tags": [
    {
      "name": "Session",
      "description": "Login and Forgot-Password"
    },
    {
      "name": "User",
      "description": "Create, Edit, List and Delete"
    },
    {
      "name": "Message",
      "description": "Send"
    },
    {
      "name": "Transactions",
      "description": "Create and List"
    },
    {
      "name": "Upload",
      "description": "Upload images, videos and audios"
    }
  ],
  "schemes": "http",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Session"
        ],
        "description": "Endpoint para criar os usuários.",
        "parameters": [
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "description": "Dados de login",
            "type": "object",
            "schema": {
              "$ref": "#/definitions/Session"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/SuccessSession"
            },
            "message": "Succesfuly"
          },
          "401": {
            "schema": {
              "$ref": "#/definitions/ErrorSessionPassword"
            },
            "error": "Falha no Login, senha inválida",
            "description": "Unauthorized"
          },
          "403": {
            "schema": {
              "$ref": "#/definitions/ErrorUserDeleted"
            },
            "error": "Este usuário não está mais cadastrado na nossa base de dados",
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/forgot_password": {
      "post": {
        "tags": [
          "Session"
        ],
        "description": "Endpoint para criar os usuários.",
        "parameters": [
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "description": "Dados de login",
            "type": "object",
            "schema": {
              "$ref": "#/definitions/ForgotPassword"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/SuccessChangePass"
            },
            "message": "Uma nova senha foi enviada para o seu email!!!"
          },
          "403": {
            "schema": {
              "$ref": "#/definitions/ErrorUserDeleted"
            },
            "error": "Este usuário não está mais cadastrado na nossa base de dados",
            "description": "Forbidden"
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para cadastrar os usuários.",
        "parameters": [
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "description": "Dados do usuário",
            "type": "object",
            "schema": {
              "$ref": "#/definitions/UserTemplate"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/CreateError"
            },
            "error": "Esse usuário já existe"
          }
        }
      }
    },
    "/users/edit/{id}": {
      "patch": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para alterar os dados do usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "description": "Dados do usuário",
            "type": "object",
            "schema": {
              "$ref": "#/definitions/EditUserTemplate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "message": "Dados do usuário foram atualizados!!!"
          }
        }
      }
    },
    "/users/list": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para mostrar os usuários.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            },
            "message": "O usuário foi cadastrado!!!"
          }
        }
      }
    },
    "/users/delete/{id}": {
      "delete": {
        "tags": [
          "User"
        ],
        "description": "Endpoint para deletar um usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuários Deletado",
            "schema": {
              "$ref": "#/definitions/DeletedUser"
            }
          }
        }
      }
    },
    "/chat/send": {
      "post": {
        "tags": [
          "Message"
        ],
        "description": "Endpoint para enviar as mensagens.",
        "parameters": [
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "description": "Sua Mensagem",
            "type": "object",
            "schema": {
              "$ref": "#/definitions/MessageTemplate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/SendMessage"
            },
            "message": "O usuário foi cadastrado!!!"
          }
        }
      }
    },
    "/chat/list": {
      "get": {
        "tags": [
          "Message"
        ],
        "description": "Endpoint para mostrar as mensagens.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Messages"
            },
            "message": "O usuário foi cadastrado!!!"
          }
        }
      }
    },
    "/transactions/create": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "description": "Endpoint para criar transações.",
        "parameters": [
          {
            "name": "Data",
            "in": "body",
            "required": true,
            "description": "Nova transação",
            "type": "object",
            "schema": {
              "$ref": "#/definitions/TransactionTemplate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transaction"
            },
            "message": "transação realizada"
          }
        }
      }
    },
    "/transactions/list": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "description": "Endpoint para mostrar as transações.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Transactions"
            },
            "message": "O usuário foi cadastrado!!!"
          }
        }
      }
    },
    "/upload": {
      "post": {
        "tags": [
          "Upload"
        ],
        "description": "Endpoint para fazer upload de arquivos.",
        "parameters": [
          {
            "name": "image",
            "in": "formData",
            "required": true,
            "description": "image",
            "type": "file"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
